<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebSocket Chat</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        #chatbox {
            width: 100%;
            height: 400px;
            border: 1px solid #ccc;
            overflow-y: auto;
            padding: 10px;
            margin-bottom: 10px;
        }
        #messageInput {
            width: 80%;
        }
        #sendButton {
            width: 18%;
        }
    </style>
</head>
<body>
    <h1>WebSocket Chat</h1>
    <div id="chatbox"></div>
    <input type="text" id="messageInput" placeholder="Enter message...">
    <button id="sendButton">Send</button>

    <script>
        let socket;
        let userName = prompt("Enter your name:");

        if (userName === null || userName.trim() === "") {
            userName = "Anonymous";
        }

        // Connect to the WebSocket server
        function connect() {
            socket = new WebSocket("wss://localhost:7283/ws");

            socket.onopen = function () {
                console.log("Connected to WebSocket server");
                addToChatbox("Connected to the server as " + userName);
            };

            socket.onmessage = function (event) {
                addToChatbox(event.data);
            };

            socket.onclose = function () {
                console.log("Disconnected from WebSocket server");
                addToChatbox("Disconnected from the server.");
            };

            socket.onerror = function (error) {
                console.log("WebSocket error: " + error.message);
                addToChatbox("WebSocket error: " + error.message);
            };
        }

        // Send a message
        function sendMessage() {
            const messageInput = document.getElementById("messageInput");
            const message = messageInput.value;

            if (message.trim() !== "") {
                const messageToSend = `${userName}: ${message}`;
                socket.send(messageToSend);
                messageInput.value = "";
            }
        }

        // Add message to chatbox
        function addToChatbox(message) {
            const chatbox = document.getElementById("chatbox");
            const messageElement = document.createElement("div");
            messageElement.textContent = message;
            chatbox.appendChild(messageElement);
            chatbox.scrollTop = chatbox.scrollHeight; // Auto-scroll
        }

        // Event listener for the Send button
        document.getElementById("sendButton").addEventListener("click", sendMessage);

        // Event listener for Enter key press
        document.getElementById("messageInput").addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
                sendMessage();
            }
        });

        // Connect to WebSocket on page load
        window.onload = connect;
    </script>
</body>
</html>

